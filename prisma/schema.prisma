// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Template {
  id         String   @id @default(cuid())
  name       String   @unique
  data       Json
  designType String   @default("homepage")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PdpConfig {
  id         Int      @id @default(1)
  active     Boolean  @default(false)
  designData Json     @default("[]")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SliderConfig {
  id         Int      @id @default(1)
  enabled    Boolean  @default(true)
  slides     Json     @default("[]")
  settings   Json     @default("{}")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CategoriesConfig {
  id         Int      @id @default(1)
  title      String   @default("Eyeglasses")
  enabled    Boolean  @default(true)
  categories Json     @default("[]")
  products   Json     @default("[]")
  saleBanner Json     @default("{\"enabled\": false, \"line1\": \"END OF\", \"line2\": \"SEASON Sale\", \"backgroundColor\": \"#d32f2f\"}")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SunglassesConfig {
  id         Int      @id @default(1)
  title      String   @default("Sunglasses")
  enabled    Boolean  @default(true)
  categories Json     @default("[]")
  products   Json     @default("[]")
  saleBanner Json     @default("{\"enabled\": false, \"line1\": \"HOT\", \"line2\": \"SUMMER Sale\", \"backgroundColor\": \"#ff6b35\"}")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SharkTankConfig {
  id         Int      @id @default(1)
  title      String   @default("As Seen on Shark Tank India")
  subtitle   String   @default("Style it like the Sharks!")
  enabled    Boolean  @default(true)
  products   Json     @default("[]")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model HeaderConfig {
  id             Int      @id @default(1)
  enabled        Boolean  @default(true)
  announcement   Json     @default("{}")
  genderTabs     Json     @default("[]")
  trendingImages Json     @default("[]")
  navigation     Json     @default("{}")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
